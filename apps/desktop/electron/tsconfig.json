{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "../app",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "../../../",
    "noImplicitAny": false,
    "types": ["node"],
    "typeRoots": ["../../../node_modules/@types", "../../../node_modules"]
  },
  "exclude": ["node_modules", "dist", "app", "preload.ts", "preload/**/*"],
  "include": ["**/*.ts"]
}
